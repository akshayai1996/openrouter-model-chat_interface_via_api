<Window x:Class="AIChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="AI Chat - OpenRouter"
        Height="700" Width="1000"
        MinHeight="500" MinWidth="700"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header with Model Selection -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource PrimaryBrush}" CornerRadius="8" Padding="10,6" Margin="0,0,12,0">
                        <TextBlock Text="AI" Foreground="White" FontWeight="Bold"/>
                    </Border>
                    <TextBlock Text="Chat Assistant" Foreground="{StaticResource TextBrush}" 
                               FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Font Controls & Model Selection -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Font Controls -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                        <Button x:Name="DecreaseFontButton" Content="A-" MinWidth="32" MinHeight="32" Padding="4"
                                Click="DecreaseFont_Click" Margin="0,0,4,0"
                                Background="{StaticResource SurfaceBrush}" Foreground="{StaticResource TextBrush}"
                                BorderThickness="1" BorderBrush="{StaticResource MutedTextBrush}"/>
                        <Button x:Name="IncreaseFontButton" Content="A+" MinWidth="32" MinHeight="32" Padding="4"
                                Click="IncreaseFont_Click"
                                Background="{StaticResource SurfaceBrush}" Foreground="{StaticResource TextBrush}"
                                BorderThickness="1" BorderBrush="{StaticResource MutedTextBrush}"/>
                    </StackPanel>

                    <TextBlock Text="Model:" Foreground="{StaticResource MutedTextBrush}" 
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:Name="ModelComboBox" Width="250" Style="{StaticResource ModelComboBoxStyle}"
                              SelectionChanged="ModelComboBox_SelectionChanged">
                        <ComboBoxItem IsSelected="True">
                            <TextBlock Text="OpenRouter: Auto (Free)"/>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <TextBlock Text="Aurora Alpha"/>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <TextBlock Text="StepFun: Step 3.5 Flash"/>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <TextBlock Text="Arcee AI: Trinity Large Preview"/>
                        </ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Chat Messages Area (WebView2) -->
        <wv2:WebView2 Grid.Row="1" x:Name="ChatBrowser" DefaultBackgroundColor="#0f172a"/>
        
        <!-- Input Area -->
        <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="MessageTextBox" 
                         Style="{StaticResource InputTextBoxStyle}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         MaxHeight="150"
                         VerticalScrollBarVisibility="Auto"
                         KeyDown="MessageTextBox_KeyDown"
                         TextChanged="MessageTextBox_TextChanged"/>
                
                <Button Grid.Column="1" 
                        x:Name="SendButton"
                        Style="{StaticResource SendButtonStyle}"
                        Content="Send"
                        Margin="12,0,0,0"
                        Click="SendButton_Click"
                        IsEnabled="False"/>
            </Grid>
        </Border>
    </Grid>
</Window>
